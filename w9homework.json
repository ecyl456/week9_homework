{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Expected Years of Schooling",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equalEarth"
    },
    "data": {
        "url": "./homework_files/vscode_files/ne_10m_admin_0_countries.json",
        "format": {
            "type": "topojson",
            "feature": "ne_10m_admin_0_countries"
        }
    },
    "transform": [
        {
            "lookup": "properties.SOV_A3",
            "from": {
                "data": {
                    "url": "./homework_files/vscode_files/expected-years-of-schooling.csv"
                },
                "key": "Code",
                "fields": [
                    "Expected years of schooling"
                ]
            }
        },
        {
            "calculate": "datum.Expected_years_of_schooling + 0.1",
            "as": "Expected years of schooling"
        },
        {
            "filter": "datum['Expected years of schooling'] != null && datum['Expected years of schooling'] > 0"
        }
    ],
    "mark": {
        "type": "geoshape"
    },
    "encoding": {
        "color": {
            "field": "Expected_years_of_schooling",
            "type": "quantitative",
            "scale": {
                "type": "threshold",
                "domain": [
                    10000,
                    100000,
                    500000
                ],
                "range": [
                    "#fdbe85",
                    "#fd8d3c",
                    "#e6550d",
                    "#a63603"
                ]
            }
        },
        "tooltip": [
            {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "Expected_years_of_schooling",
                "type": "quantitative",
                "title": "Expected_years_of_schooling"
            }
        ]
    }
}