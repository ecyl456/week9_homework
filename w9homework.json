{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Expected Years of Schooling Gloally",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "mark": {
                "type": "geoshape",
                "fill": "lightblue"
            },
            "data": {
                "sphere": true
            }
        },
        {
            "mark": {
                "type": "geoshape",
                "stroke": "black",
                "strokeWidth": 0.5
            },
            "data": {
                "graticule": true
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/ecyl456/week9_homework/refs/heads/main/ne_1_.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/ecyl456/week9_homework/refs/heads/main/expected-years-of-schooling.csv"
                        },
                        "key": "Entity",
                        "fields": [
                            "Combined total net enrolment rate, primary, both sexes"
                        ]
                    }
                },
                {
                    "calculate": "datum['Combined total net enrolment rate, primary, both sexes']",
                    "as": "Combined Total Net Enrolment Rate(Primary, both sexes)"
                }
            ],
            "mark": {
                "type": "geoshape"
            },
            "encoding": {
                "color": {
                    "field": "Combined total net enrolment rate, primary, both sexes",
                    "type": "quantitative",
                    "scale": {
                        "type": "log",
                        "domain": [
                            20,
                            40,
                            60,
                            80,
                            100
                        ]
                    },
                    "legend": {
                        "orient": "right",
                        "title": "Combined Total Net Enrolment Rate(Primary, both sexes)",
                        "titleFontSize": 10,
                        "labelFontSize": 10,
                        "titleLimit": 300,
                        "padding": 10
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Combined total net enrolment rate, primary, both sexes",
                        "type": "quantitative",
                        "title": "Combined Total Net Enrolment Rate(Primary, both sexes)"
                    }
                ]
            }
        }
    ]
}